# Home Assistant Configuration
# Base URL for Home Assistant instance
VITE_HOME_ASSISTANT_URL=http://homeassistant.local:8123

# WebSocket URL for Home Assistant (optional, usually auto-detected)
VITE_HOME_ASSISTANT_WS_URL=

# Home Assistant Long-Lived Access Token
# Get this from: Home Assistant > Profile > Long-Lived Access Tokens
VITE_HOME_ASSISTANT_TOKEN=

# Weather API Configuration
# Provider: 'openweathermap' | 'weathergov' | 'mock'
VITE_WEATHER_PROVIDER=mock

# Weather API Key (required for openweathermap)
VITE_WEATHER_API_KEY=

# Weather API Base URL (optional, uses provider default if not set)
VITE_WEATHER_BASE_URL=

# Calendar API Configuration
# Provider: 'google' | 'caldav' | 'local'
VITE_CALENDAR_PROVIDER=local

# Calendar API Key (required for Google Calendar)
VITE_CALENDAR_API_KEY=

# Calendar API Base URL (optional, uses provider default if not set)
VITE_CALENDAR_BASE_URL=


VITE_POSTGRES_USER=homeai
VITE_POSTGRES_PASSWORD=homeai_password
VITE_POSTGRES_HOST=home-ai-postgres
VITE_POSTGRES_PORT=5432
VITE_POSTGRES_DB=homeai